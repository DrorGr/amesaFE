{
  "name": "amesa",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration=dev",
    "build:dev": "ng build --configuration=dev",
    "build:stage": "ng build --configuration=stage",
    "build:prod": "ng build --configuration=production",
    "build:analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/demo/stats.json",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "serve": "ng serve",
    "serve:dev": "ng serve --configuration=dev",
    "serve:stage": "ng serve --configuration=stage",
    "serve:prod": "ng serve --configuration=production",
    "preview": "ng build && npx http-server dist/demo -p 8080",
    "e2e": "ng e2e",
    "security:audit": "ng build && npm audit",
    "accessibility:test": "ng serve --configuration=development"
  },
  "dependencies": {
    "@angular/animations": "20.2.1",
    "@angular/common": "20.2.1",
    "@angular/compiler": "20.2.1",
    "@angular/core": "20.2.1",
    "@angular/forms": "20.2.1",
    "@angular/localize": "20.2.1",
    "@angular/platform-browser": "20.2.1",
    "@angular/router": "20.2.1",
    "@microsoft/signalr": "^9.0.6",
    "autoprefixer": "^10.4.21",
    "express": "^4.21.2",
    "rxjs": "^7.8.1",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.5.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "20.2.1",
    "@angular/cli": "20.2.1",
    "@angular/compiler-cli": "20.2.1",
    "@testing-library/angular": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-preset-angular": "^13.0.0",
    "typescript": "5.9.2"
  }
}
